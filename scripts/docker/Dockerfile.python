FROM python:2.7
WORKDIR /data

RUN apt-get update && \
    apt-get install -qqy \
	ca-certificates

COPY controller /data
COPY config.json /data
COPY pyclient.py /data
COPY requirements.txt /data

RUN pip install -r requirements.txt

CMD ["./controller", "--logtostderr", "-v=1", "--client=python", "--config=./config.json"]
